<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Products List</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Ga+Maamli&family=Teko:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background: linear-gradient(to bottom, #d0007d, #2235ff);
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

      .container {
        background: white;
        width: 80%;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.663);
        text-align: center;
      }

      h1 {
        font-size: 2.5rem;
        color: #0041c3;
        margin-bottom: 20px;
        text-shadow: 0px 2px 5px rgb(180, 180, 255);
        font-family: "Teko", "Ga Maamli", sans-serif;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #4ba5ff;
        color: white;
      }

      tr:hover {
        background-color: #f1f1f1;
      }

      button {
        padding: 10px 20px;
        background-color: #ff4b5c;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #ff0000;
      }

      a {
        text-decoration: none;
        color: #4ba5ff;
        font-size: 1rem;
        margin-top: 15px;
        display: inline-block;
      }

      a:hover {
        color: #1e90ff;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>All Products</h1>
      <table>
        <thead>
          <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Manufacturing Date</th>
            <th>Expiration Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.category %></td>
            <td><%= product.manufacturingDate %></td>
            <td><%= product.expirationDate %></td>
            <td>
              <form
                action="/admin/products/delete/<%= product.id %>"
                method="POST"
              >
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/admin">Back to Admin Dashboard</a>
    </div>
  </body>
</html>
