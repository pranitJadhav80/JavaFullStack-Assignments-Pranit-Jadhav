<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UniqueKart</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Ga+Maamli&family=Teko:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background: linear-gradient(to bottom, #d0007d, #2235ff);
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }

      .container {
        background: white;
        width: 100%;
        max-width: 900px;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        text-align: center;
      }

      h1 {
        font-size: 2.5rem;
        color: #0041c3;
        margin-bottom: 20px;
        text-shadow: 0px 2px 5px rgb(180, 180, 255);
        font-family: "Teko", "Ga Maamli", sans-serif;
      }

      table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        table-layout: auto;
        word-wrap: break-word;
        white-space: normal;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ccc;
        font-size: 1rem;
      }

      th {
        background-color: #0041c3;
        color: white;
      }

      tr:nth-child(even) {
        background-color: #f4f4f4;
      }

      tr:hover {
        background-color: #e0e0e0;
      }

      .btn {
        padding: 10px 20px;
        background-color: #4ba5ff;
        color: white;
        text-decoration: none;
        font-size: 1rem;
        border-radius: 8px;
        margin-top: 30px;
        transition: background-color 0.3s, transform 0.2s;
        display: inline-block;
      }

      .btn:hover {
        background-color: #1e90ff;
        transform: scale(1.05);
      }

      .message {
        margin-top: 20px;
        font-size: 1.2rem;
        color: #e74c3c;
      }

      .no-products {
        margin-top: 20px;
        font-size: 1.2rem;
        color: #7f8c8d;
      }

      form {
        margin-bottom: 20px;
      }

      input[type="text"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 70%;
      }

      button {
        padding: 10px;
        background-color: #4ba5ff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      button:hover {
        background-color: #1e90ff;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Welcome to UniqueKart</h1>

      <!-- Search Form -->
      <form method="GET" action="/user">
        <input
          type="text"
          name="search"
          placeholder="Search by name or category"
        />
        <button type="submit">Search</button>
      </form>

      <!-- Check if products exist -->
      <% if (products && products.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Manufacturing Date</th>
            <th>Expiration Date</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((product) => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td>â‚¹ <%= product.price %></td>
            <td><%= product.category %></td>
            <td><%= product.manufacturingDate %></td>
            <td><%= product.expirationDate %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <p class="no-products">No products are available at the moment.</p>
      <% } %>

      <a href="/" class="btn">Back to Homepage</a>
    </div>
  </body>
</html>
